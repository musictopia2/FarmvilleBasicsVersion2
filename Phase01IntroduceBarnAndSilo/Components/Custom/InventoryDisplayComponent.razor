<style>
    .inv-root {
        height: 65vh;
        display: flex;
        flex-direction: column;
        min-height: 0; /* required for inner scroll in flex */
    }

    .inv-scroll {
        flex: 1;
        min-height: 0; /* required for inner scroll in flex */
        overflow: auto; /* scroll only here */
        padding-top: 6px;
    }

    

    .inv-item {
        position: relative;
        width: 100%; /* fill the grid cell */
        aspect-ratio: 1 / 1; /* keeps it square and scalable */
        min-width: 120px; /* safety for very small screens */
        max-width: 260px; /* optional: prevents absurdly huge icons */

        padding: 10px;
        border-radius: 10px;
        background: rgba(0,0,0,0.03);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .inv-img {
        width: 90%;
        height: 90%;
        object-fit: contain;
        user-select: none;
        pointer-events: none;
    }

    .inv-amount {
        position: absolute;
        right: clamp(8px, 1.2vw, 14px);
