@inherits InventoryAwareComponentBase
<div class="p-2 quest-book-root">

    <div class="quest-grid">
        @foreach (var quest in _incompleteQuests)
        {
            var itemKey = quest.Item;
            var need = quest.Required;
            var have = InventoryAmount(itemKey);
            var canComplete = have >= need;

            <div class="quest-grid-item">
                <div class="card p-2 h-100">
                    <div class="d-flex align-items-center justify-content-between gap-2">

                        <!-- Track toggle -->
                        <button class="track-btn @(quest.Tracked ? "tracked" : "")"
                                title="Track"
                                @onclick="() => ToggleTrackedAsync(quest)">
                            ★
                        </button>

                        <!-- Requirement -->
                        <div class="d-flex align-items-center gap-2 flex-grow-1"
                             style="min-width: 0;">


                             <ItemRequirementDisplay 
                                 Name="@itemKey"
                                 Required="@need"
                                 Have="@have"
                                 />


                            @* <img src="@GetItemImageSrc(itemKey)"
                                 alt="@itemKey"
                                 style="width: 40px; height: 40px; object-fit: contain;" />

                            <div style="min-width:0;">
                                <div class="fw-bold quest-name">@itemKey.GetWords</div>

                                <div class="fw-bold @(canComplete ? "text-success" : "text-danger")"
                                     style="font-size: 0.95rem; line-height: 1.1;">
                                    @have / @need
                                </div>
                            </div> *@
                        </div>

                        <!-- Complete -->
                        <PrimaryButton IsEnabled="canComplete"
                                       OnClick="() => CompleteQuestAsync(quest)">
                            ✔
                        </PrimaryButton>
                    </div>
                </div>
            </div>
        }
    </div>
</div>